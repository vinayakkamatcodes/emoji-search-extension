{
  "manifest_version": 3,
  "name": "Emoji Search",
  "version": "1.0",
  "description": "Quickly search and copy emojis to your clipboard",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon_16x16.png",
      "48": "icons/icon_48x48.png",
      "128": "icons/icon_128x128.png"
    }
  },
  "icons": {
    "16": "icons/icon_16x16.png",
    "48": "icons/icon_48x48.png",
    "128": "icons/icon_128x128.png"
  },
  "permissions": [
    "clipboardWrite"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "emoji-search-quick-copy@vinayak-ext.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}